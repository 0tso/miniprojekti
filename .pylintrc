[MAIN]
ignore=src/tests

[BASIC]
include-naming-hint=True

[MESSAGE CONTROL]
disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring

[DESIGN]
max-attributes=16
max-args=10